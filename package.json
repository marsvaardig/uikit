{
  "name": "uikit",
  "version": "1.0.0",
  "description": "Better Simpler UI",
  "scripts": {
    "compile:sass": "npx sass src/assets/scss:_site/assets/css",
    "watch:eleventy": "npx @11ty/eleventy --serve",
    "watch:sass": "npx sass src/assets/scss:_site/assets/css --watch",
    "build:js": "esbuild src/assets/scripts/main.js --bundle --outfile=_site/assets/js/scripts.js",
    "watch:js": "esbuild src/assets/scripts/main.js --bundle --outfile=_site/assets/js/scripts.js --watch",
    "build": "rm -rf _site && npm run compile:sass && npm run build:js && npx @11ty/eleventy",
    "start": "npm-run-all build --parallel watch:*"
  },
  "keywords": [],
  "author": "Robin Poort",
  "devDependencies": {
    "@11ty/eleventy": "^3.0.0",
    "@11ty/eleventy-img": "^6.0.1",
    "@factorial/eleventy-plugin-twig": "^0.2.1",
    "clean-css": "^5.3.2",
    "esbuild": "^0.25.2",
    "npm-run-all": "^4.1.5",
    "sass": "^1.86.3",
    "stylelint": "^16.10.0",
    "stylelint-config-recommended-scss": "^14.1.0",
    "stylelint-config-standard": "^36.0.1",
    "stylelint-config-standard-scss": "^13.1.0",
    "stylelint-order": "^6.0.4",
    "stylelint-scss": "^6.8.1",
    "twig": "^1.17.1"
  },
  "dependencies": {
    "illusion": "github:marsvaardig/illusion#v8.1.0",
    "modern-normalize": "^3.0.1"
  }
}
